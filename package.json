{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "description": "GCP KMS authorizer for Flow blockchain.",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist",
    "package.json",
    "yarn.lock"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukaracki/fcl-kms-gcp-authorizer.git"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "flow",
    "gcp",
    "fcl",
    "onflow",
    "signer"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "example": "run-p example:*",
    "example:start-emulator": "docker-compose up",
    "example:execture": " tsc --outDir dist examples/send-tx.ts && node dist/examples/send-tx.js",
    "test": "run-p test:*",
    "test:start-emulator": "docker-compose up",
    "test:execute": "sleep 2 && jest --forceExit && docker-compose down"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "fcl-gcp-kms-authorizer",
  "author": "Luka Racki <luka@racki.dev>",
  "module": "dist/fcl-gcp-kms-authorizer.esm.js",
  "bugs": {
    "url": "https://github.com/lukaracki/fcl-kms-gcp-authorizer/issues"
  },
  "homepage": "https://github.com/lukaracki/fcl-kms-gcp-authorizer#readme",
  "devDependencies": {
    "@google-cloud/storage": "^5.14.4",
    "@onflow/types": "^0.0.5",
    "@types/jest": "^27.0.2",
    "elliptic": "^6.5.4",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "npm-run-all": "^4.1.5",
    "size-limit": "^5.0.4",
    "ts-jest": "^27.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@google-cloud/kms": "^2.8.1",
    "@onflow/fcl": "^0.0.77",
    "@onflow/rlp": "^0.0.3",
    "@types/asn1js": "^2.0.2",
    "@types/node": "^16.10.2",
    "@types/pvutils": "^1.0.1",
    "asn1js": "^2.1.1",
    "fast-crc32c": "^2.0.0",
    "pvutils": "^1.0.17",
    "sha3": "^2.1.4"
  },
  "jest": {
    "testTimeout": 10000,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
